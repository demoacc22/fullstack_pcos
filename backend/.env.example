# PCOS Analyzer Backend Configuration

# Server
HOST=127.0.0.1
PORT=5000
DEBUG=true
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# File handling
MAX_UPLOAD_MB=5
STATIC_TTL_SECONDS=3600

# Gender Detection
GENDER_AUTOCALIBRATE=true
GENDER_CONF_THRESHOLD=0.60
# Force gender mapping if needed (0 or 1)
# GENDER_MALE_INDEX=0

# Ensemble Robustness
ENSEMBLE_TRIM_RATIO=0.10
ENSEMBLE_MAD_K=3.0
# Disable problematic models
# ENSEMBLE_MODEL_DENYLIST=pcos_vgg16
# Or only allow specific models
# ENSEMBLE_MODEL_ALLOWLIST=pcos_resnet50,pcos_efficientnetb0

# X-ray Model Loading
XRAY_COMPILE=false
XRAY_ALLOW_FALLBACK=true

# Fusion
FUSION_MODE=threshold
USE_ENSEMBLE=true